// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "rhel-openssl-3.0.x"]  // Native for local dev, linux-musl for Docker/Alpine (if applicable), rhel for Vercel
  output        = "../src/generated/prisma"  // Adjust relative to your schema location; ensures it's inside src for bundling
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum MessageRole {
  USER
  ASSISTANT
}

enum MessageType {
  RESULT
  ERROR
}

model Project {
  id String @id @default(uuid())
  userId String
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sandboxId String? @unique
  sandboxUrl String? @unique

  messages Message[]

  @@index([name])
  @@index([userId])
}

model Message {
  id        String       @id @default(uuid())
  content   String
  role      MessageRole
  type      MessageType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  projectId String
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fragment  Fragment?

  @@index([projectId])
}

model Fragment {
  id         String   @id @default(uuid())
  messageId  String   @unique
  message    Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  title      String
  files      Json

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([messageId])
}
